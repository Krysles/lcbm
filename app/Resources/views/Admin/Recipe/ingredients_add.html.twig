{% extends ':Admin:dashboard.html.twig' %}

{% block title %}Ajout des ingrédients - {{ parent() }}{% endblock %}

{% block css %}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet"/>
{% endblock %}

{% block content %}
    <div id="recipe" class="item">
        <div class="flex-center">
            <div class="col-12 col-sm-12 col-md-12 col-lg-10 col-xl-10">
                <div class="card card-cascade">
                    <div class="view gradient-card-header red darken-3">
                        <h2 class="h2-responsive">Ajouter des ingrédients</h2>
                    </div>
                    <div class="card-body">
                        <div class="card-text">
                            {% form_theme form '::jquery.collection.html.twig' ':Admin:ingredients-theme.html.twig' %}
                            {{ form_start(form) }}
                            <div class="row">
                                <div class="col-12">{{ form_label(form.ingredients) }}</div>
                                <div class="col-12">{{ form_widget(form.ingredients) }}</div>
                                <div class="col-12">{{ form_errors(form.ingredients) }}</div>
                                <hr>
                                <div class="col-12">
                                    <div class="row p-3 m-0 flex-center">
                                        {{ form_widget(form.notsaveandcancel, { 'label': ' annuler', 'attr': {'class': 'col-12 col-sm-5 col-md-5 col-lg-5 col-xl-4 btn red darken-3 notsaveandcancel m-1 m-xl-1 mb-2', 'formnovalidate': 'fornovalidate'} }) }}
                                        {{ form_widget(form.saveandback, { 'label': ' reprendre plus tard', 'attr': {'class': 'col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6 btn red darken-3 saveandback m-1 m-xl-1 mb-2'} }) }}
                                        {{ form_widget(form.saveandreturn, { 'label': ' photo', 'attr': {'class': 'col-12 col-sm-5 col-md-5 col-lg-5 col-xl-4 btn red darken-3 saveandreturn m-1 m-xl-1 mb-2'} }) }}
                                        {{ form_widget(form.saveandadd, { 'label': 'ajouter les étapes ', 'attr': {'class': 'col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6 btn red darken-3 saveandadd m-1 m-xl-1 mb-2'} }) }}
                                    </div>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>
    <script src="{{ asset('js/jquery.collection.js') }}"></script>
    <script>
        $('.collection').collection({
            min: 0,
            init_with_n_elements: 1,
            allow_duplicate: false,
            add: '<a href="#" class="btn btn-default"><i class="fa fa-plus"></i></a>',
            after_init: function (collection, element) {
                $('select').material_select();
            },
            after_add: function (collection, element) {
                $('select').material_select();
            }
        });
        $(document).ready(function () {
            $(".select").select2();
        });
    </script>
{% endblock %}