{% extends ':Admin:dashboard.html.twig' %}

{% block title %}Ajouter une sous-catégorie - {{ parent() }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="offset-sm-1 col-sm-10">
            <div class="card-block">
                <div class="text-center">
                    <h4>Ajouter une sous-catégorie à "{{ category.name }}"</h4>
                    <hr class="mt-2 mb-2">
                </div>
                <div class="md-form">
                    {{ form_start(form) }}
                    <i class="fa fa-tags prefix"></i>
                    {{ form_widget(form.name, {'attr': {'length': '30'}}) }}
                    {{ form_label(form.name, 'Sous-catégorie à ajouter') }}
                    {{ form_errors(form.name) }}
                    <div class="text-center">
                        <button type="submit" class="btn red darken-3" formnovalidate><i class="fa fa-check"></i>
                            Ajouter
                        </button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

