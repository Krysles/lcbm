{% extends ':Admin:dashboard.html.twig' %}

{% block title %}Liste des unités - {{ parent() }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="offset-sm-1 col-sm-10">
            <h4>Liste des unités</h4>
            {% if units is not empty %}
                <table class="table">
                    <thead class="red darken-3 white-text">
                    <tr>
                        <th>Unité</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for unity in units %}
                        <tr>
                            <td>{{ unity.name }}</td>
                            <td>
                                <a href="{{ path('admin_unity_update', {'id': unity.id}) }}" class="teal-text"><i class="fa fa-pencil fa-2x"></i></a>
                                <a href="{{ path('admin_unity_delete', {'id': unity.id}) }}" class="red-text"><i class="fa fa-times fa-2x"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p>Aucune unité.</p>
            {% endif %}
            <a class="btn red darken-3" href="{{ path('admin_unity_add') }}"><i
                        class="fa fa-check"></i> Ajouter une unité</a>
        </div>
    </div>

{% endblock %}

{% block javascript %}

{% endblock %}