    <!-- Titre de la page -->
    <title>{% block title %}La cuisine by Mary{% endblock %}</title>
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    <!-- Font Awesome -->
