{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
    {# form_widget(form) #}

<section class="form-elegant">
    <!--Form without header-->
    <div class="card">
        <div class="card-body mx-4">
            <!--Header-->
            <div class="text-center">
                <h3 class="dark-grey-text mb-5"><strong>Inscription</strong></h3>
            </div>
            <!--Body-->
            <div class="md-form">
                <i class="fa fa-envelope prefix grey-text"></i>
                {{ form_widget(form.email, { 'attr': { 'class': 'form-control' }}) }}
                {{ form_label(form.email, 'Adresse email') }}
                <div class="red-text darken-3 text-center">
                    {{ form_errors(form.email) }}
                </div>
            </div>
            <div class="md-form">
                <i class="fa fa-user prefix grey-text"></i>
                {{ form_widget(form.username, { 'attr': { 'class': 'form-control' }}) }}
                {{ form_label(form.username, "Nom d'utilisateur") }}
                <div class="red-text darken-3 text-center">
                    {{ form_errors(form.username) }}
                </div>
            </div>
            <div class="md-form">
                <i class="fa fa-lock prefix grey-text"></i>
                {{ form_widget(form.plainPassword.first, { 'attr': { 'class': 'form-control' }}) }}
                {{ form_label(form.plainPassword.first, "Mot de passe") }}
                <div class="red-text darken-3 text-center">
                    {{ form_errors(form.plainPassword.first) }}
                </div>
            </div>
            <div class="md-form">
                <i class="fa fa-lock prefix grey-text"></i>
                {{ form_widget(form.plainPassword.second, { 'attr': { 'class': 'form-control' }}) }}
                {{ form_label(form.plainPassword.second, "Répéter le mot de passe") }}
                <div class="red-text darken-3 text-center">
                    {{ form_errors(form.plainPassword.second) }}
                </div>
            </div>
            <div class="text-center mb-3">
                <button type="submit" class="btn btn-red" formnovalidate>S'inscrire</button>
            </div>
        </div>
    </div>
    <!--/Form without header-->
</section>
{{ form_end(form) }}